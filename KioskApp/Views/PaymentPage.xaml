<Page x:Class="KioskApp.Views.PaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Payment"
      Background="{StaticResource BackgroundColor}">
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,30">
            <Button Content="&#x2190; Back" 
                 Style="{StaticResource SecondaryButtonStyle}"
                   Click="BackButton_Click"/>
            <TextBlock Text="Select Payment Method" 
                      FontSize="36" 
                      FontWeight="Bold"
                      Margin="30,0,0,0"
                      VerticalAlignment="Center"/>
        </StackPanel>
        
        <!-- Payment Options -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Order Summary -->
            <Border Grid.Row="0" Style="{StaticResource CardBorderStyle}" Margin="0,0,0,30" Padding="30">
                <StackPanel>
                    <TextBlock Text="Order Summary" 
                             FontSize="24" 
                             FontWeight="Bold"
                             Margin="0,0,0,20"/>
                    
                    <ItemsControl x:Name="OrderSummaryControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" 
                                             Text="{Binding MenuItem.Name}" 
                                             FontSize="18"/>
                                    <TextBlock Grid.Column="1" 
                                             FontSize="18"
                                             Margin="20,0">
                                        <Run Text="x "/>
                                        <Run Text="{Binding Quantity}"/>
                                    </TextBlock>
                                    <TextBlock Grid.Column="2" 
                                             FontSize="18"
                                             FontWeight="Bold">
                                        <Run Text="$"/>
                                        <Run Text="{Binding TotalPrice, Mode=OneWay, StringFormat=N0}"/>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <Separator Margin="0,20"/>
                    
                    <Grid>
                        <TextBlock Text="Total Amount" 
                                 FontSize="24" 
                                 FontWeight="Bold"
                                 VerticalAlignment="Center"/>
                        <TextBlock x:Name="TotalAmountText" 
                                 FontSize="32" 
                                 FontWeight="Bold"
                                 Foreground="{StaticResource AccentColor}"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Payment Method Selection -->
            <UniformGrid Grid.Row="1" 
                        Columns="2" 
                        Rows="1">
                
                <Button Style="{StaticResource CategoryButtonStyle}"
                       Margin="10,10,20,10"
                       Click="PaymentMethod_Click"
                       Tag="Card">
                    <StackPanel>
                        <TextBlock Text="&#x1F4B3;" FontSize="100" HorizontalAlignment="Center"/>
                        <TextBlock Text="Card Payment" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,30,0,0"/>
                        <TextBlock Text="Credit/Debit Card" FontSize="20" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="{StaticResource MutedTextColor}"/>
                    </StackPanel>
                </Button>
                
                <Button Style="{StaticResource CategoryButtonStyle}"
                       Margin="20,10,10,10"
                       Click="PaymentMethod_Click"
                       Tag="Cash">
                    <StackPanel>
                        <TextBlock Text="&#x1F4B5;" FontSize="100" HorizontalAlignment="Center"/>
                        <TextBlock Text="Cash Payment" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,30,0,0"/>
                        <TextBlock Text="Cash" FontSize="20" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="{StaticResource MutedTextColor}"/>
                    </StackPanel>
                </Button>
            </UniformGrid>
        </Grid>
    </Grid>
</Page>
