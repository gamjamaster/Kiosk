<Page x:Class="KioskApp.Views.CategorySelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Select Category"
      Background="{StaticResource BackgroundColor}">
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Text="Select a Category" 
                   FontSize="36" 
                   FontWeight="Bold"
                   Margin="0,0,0,40"
                   HorizontalAlignment="Center"/>
        
        <UniformGrid Grid.Row="1" 
                    Columns="3" 
                    Rows="2">
            
            <Button Style="{StaticResource CategoryButtonStyle}"
                   Click="CategoryButton_Click"
                   Tag="Burger">
                <StackPanel>
                    <TextBlock Text="&#x1F354;" FontSize="80" HorizontalAlignment="Center"/>
                    <TextBlock Text="Burgers" FontSize="24" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                </StackPanel>
            </Button>
            
            <Button Style="{StaticResource CategoryButtonStyle}"
                   Click="CategoryButton_Click"
                   Tag="Chicken">
                <StackPanel>
                    <TextBlock Text="&#x1F357;" FontSize="80" HorizontalAlignment="Center"/>
                    <TextBlock Text="Chicken" FontSize="24" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                </StackPanel>
            </Button>
            
            <Button Style="{StaticResource CategoryButtonStyle}"
                   Click="CategoryButton_Click"
                   Tag="Beverage">
                <StackPanel>
                    <TextBlock Text="&#x1F964;" FontSize="80" HorizontalAlignment="Center"/>
                    <TextBlock Text="Beverages" FontSize="24" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                </StackPanel>
            </Button>
            
            <Button Style="{StaticResource CategoryButtonStyle}"
                   Click="CategoryButton_Click"
                   Tag="Side">
                <StackPanel>
                    <TextBlock Text="&#x1F35F;" FontSize="80" HorizontalAlignment="Center"/>
                    <TextBlock Text="Sides" FontSize="24" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                </StackPanel>
            </Button>
            
            <Button Style="{StaticResource CategoryButtonStyle}"
                   Click="CategoryButton_Click"
                   Tag="Dessert">
                <StackPanel>
                    <TextBlock Text="&#x1F366;" FontSize="80" HorizontalAlignment="Center"/>
                    <TextBlock Text="Desserts" FontSize="24" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                </StackPanel>
            </Button>
        </UniformGrid>
    </Grid>
</Page>
