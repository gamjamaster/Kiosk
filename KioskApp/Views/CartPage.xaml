<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="KioskApp.Views.CartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Shopping Cart"
      Background="{StaticResource BackgroundColor}">
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,30">
            <Button Content="&#x2190; Back" 
                 Style="{StaticResource SecondaryButtonStyle}"
                   Click="BackButton_Click"/>
            <TextBlock Text="Shopping Cart" 
                      FontSize="36" 
                      FontWeight="Bold"
                      Margin="30,0,0,0"
                      VerticalAlignment="Center"/>
        </StackPanel>
        
        <!-- Cart Items -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="CartItemsPanel">
                <TextBlock x:Name="EmptyCartMessage" 
                          Text="Cart is empty." 
                          FontSize="24" 
                          Foreground="{StaticResource MutedTextColor}"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          TextAlignment="Center"
                          Margin="0,100,0,0"
                          Visibility="Collapsed"/>
                
                <ItemsControl x:Name="CartItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                                   Margin="0,0,0,15" 
                                   Padding="20"
                                   CornerRadius="8">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2" Opacity="0.2"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding MenuItem.Name}" 
                                                 FontSize="22" 
                                                 FontWeight="Bold"/>
                                        <TextBlock FontSize="18" 
                                                 Foreground="{StaticResource MutedTextColor}"
                                                 Margin="0,5,0,0">
                                            <Run Text="$"/>
                                            <Run Text="{Binding MenuItem.Price, StringFormat=N0}"/>
                                        </TextBlock>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" 
                                              Orientation="Horizontal" 
                                              VerticalAlignment="Center"
                                              Margin="20,0">
                                        <Button Content="-" 
                                               Width="40" 
                                               Height="40"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Click="DecreaseQuantity_Click"
                                               Tag="{Binding}"/>
                                        <TextBlock Text="{Binding Quantity}" 
                                                 FontSize="20"
                                                 FontWeight="Bold"
                                                 VerticalAlignment="Center"
                                                 Margin="15,0"
                                                 MinWidth="30"
                                                 TextAlignment="Center"/>
                                        <Button Content="+" 
                                               Width="40" 
                                               Height="40"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Click="IncreaseQuantity_Click"
                                               Tag="{Binding}"/>
                                    </StackPanel>
                                    
                                    <TextBlock Grid.Column="2" 
                                             FontSize="24" 
                                             FontWeight="Bold"
                                             Foreground="{StaticResource PrimaryColor}"
                                             VerticalAlignment="Center"
                                             Margin="30,0">
                                        <Run Text="$"/>
                                        <Run Text="{Binding TotalPrice, Mode=OneWay, StringFormat=N0}"/>
                                    </TextBlock>
                                    
                                    <Button Grid.Column="3" 
                                           Content="X" 
                                           FontSize="24"
                                           Width="50" 
                                           Height="50"
                                         Background="#FF333333"
                                         Foreground="White"
                                           BorderThickness="0"
                                           Cursor="Hand"
                                           Click="RemoveItem_Click"
                                           Tag="{Binding}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Total and Actions -->
        <Border Grid.Row="2" Style="{StaticResource CardBorderStyle}" Margin="0,20,0,0" Padding="30">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Total Amount" 
                             FontSize="20" 
                             Foreground="{StaticResource MutedTextColor}"/>
                    <TextBlock x:Name="TotalAmountText" 
                             FontSize="36" 
                             FontWeight="Bold"
                             Foreground="{StaticResource AccentColor}"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                       Content="Clear Cart" 
                       Margin="0,0,20,0"
                      Style="{StaticResource SecondaryButtonStyle}"
                       Click="ClearCart_Click"/>
                
                <Button Grid.Column="2" 
                       Content="Place Order" 
                       Style="{StaticResource AccentButtonStyle}"
                       Click="PlaceOrder_Click"/>
            </Grid>
        </Border>
    </Grid>
</Page>
