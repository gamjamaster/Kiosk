<Page x:Class="KioskApp.Views.OrderCompletePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Order Complete"
      Background="{StaticResource BackgroundColor}">
    <Grid Margin="40">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="800">
            <!-- Success Icon -->
            <TextBlock Text="&#x2705;" 
                      FontSize="150" 
                      HorizontalAlignment="Center"
                      Margin="0,0,0,30"/>
            
            <!-- Success Message -->
            <TextBlock Text="Order Complete!" 
                      FontSize="48" 
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,10"/>
            <TextBlock Text="Thank you for your order!" 
                      FontSize="36" 
                      Foreground="#FF666666"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,50"/>
            
            <!-- Order Number -->
            <Border Background="White" 
                   Padding="40"
                   CornerRadius="8"
                   Margin="0,0,0,30">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="3" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Order Number" 
                             FontSize="24" 
                             HorizontalAlignment="Center"
                             Foreground="#FF666666"
                             Margin="0,0,0,15"/>
                    <TextBlock x:Name="OrderNumberText" 
                             FontSize="72" 
                             FontWeight="Bold"
                             Foreground="{StaticResource AccentColor}"
                             HorizontalAlignment="Center"/>
                    
                    <Separator Margin="0,30"/>
                    
                    <TextBlock Text="Order Time" 
                             FontSize="18" 
                             HorizontalAlignment="Center"
                             Foreground="#FF666666"
                             Margin="0,0,0,10"/>
                    <TextBlock x:Name="OrderTimeText" 
                             FontSize="20" 
                             HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="Payment Method" 
                             FontSize="18" 
                             HorizontalAlignment="Center"
                             Foreground="#FF666666"
                             Margin="0,20,0,10"/>
                    <TextBlock x:Name="PaymentMethodText" 
                             FontSize="20" 
                             HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="Total Amount" 
                             FontSize="18" 
                             HorizontalAlignment="Center"
                             Foreground="#FF666666"
                             Margin="0,20,0,10"/>
                    <TextBlock x:Name="TotalAmountText" 
                             FontSize="28" 
                             FontWeight="Bold"
                             Foreground="{StaticResource PrimaryColor}"
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Instructions -->
            <TextBlock TextAlignment="Center" 
                      FontSize="20" 
                      Foreground="#FF666666"
                      Margin="0,0,0,40"
                      LineHeight="35">
                <Run Text="Your order number will be called shortly."/>
                <LineBreak/>
                <Run Text="Please wait for your order."/>
            </TextBlock>
            
            <!-- New Order Button -->
            <Button Content="Start New Order" 
                   Style="{StaticResource AccentButtonStyle}"
                   HorizontalAlignment="Center"
                   Padding="50,20"
                   FontSize="24"
                   Click="NewOrderButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
