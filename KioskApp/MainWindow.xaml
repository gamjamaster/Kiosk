<Window x:Class="KioskApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kiosk" 
        Height="900" Width="1200"
        WindowState="Maximized"
        WindowStyle="None"
        Background="{StaticResource BackgroundColor}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryColor}">
            <Grid>
                <TextBlock Text="YHKIOSK" 
                          FontSize="32" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="20,0">
                    <TextBlock Text="남은시간"
                               Foreground="White"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <TextBlock x:Name="RemainingTimeText"
                               Text="150초"
                               Foreground="White"
                               FontSize="20"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0,0,20,0"/>
                    <Button Content="Home" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="HomeButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content Area -->
        <Frame x:Name="MainFrame" 
               Grid.Row="1" 
               NavigationUIVisibility="Hidden"
               Background="Transparent"/>
        
        <!-- Bottom Bar with Cart Info -->
        <Border Grid.Row="2" Background="White" BorderThickness="0,2,0,0" BorderBrush="{StaticResource DividerColor}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="30,0">
                    <TextBlock Text="Cart: " FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock x:Name="CartItemCountText" Text="0 items" FontSize="20" VerticalAlignment="Center" Margin="10,0"/>
                    <TextBlock Text=" | " FontSize="20" Margin="10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Total: " FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock x:Name="CartTotalText" Text="$0" FontSize="20" VerticalAlignment="Center" Margin="10,0"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                       Content="View Cart" 
                       Style="{StaticResource PrimaryButtonStyle}"
                       Margin="10"
                       Click="ViewCartButton_Click"/>
                
                <Button Grid.Column="2" 
                       Content="Order" 
                       Style="{StaticResource AccentButtonStyle}"
                       Margin="10"
                       Click="OrderButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
